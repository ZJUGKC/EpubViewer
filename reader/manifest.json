{

  "manifest_version": 2,
  "name": "EpubReader",
  "version": "1.0",

  "description": "epub reader",

  "icons": {
    "48": "img/favicon.ico"
  },
   "browser_action": {
        "default_icon": {
            "30": "img/favicon.ico"
        },
        "default_title": "EpubReader"
    },
  "background": {
        "scripts": ["start.js"]
    },
    "permissions": [
        "tabs"
    ],
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com  'unsafe-eval' ; object-src 'self'"

}